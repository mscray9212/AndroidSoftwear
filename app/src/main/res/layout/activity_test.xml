<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvView_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="Hatley"
                        android:textColor="#717171"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tvView_product_brand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:text="Deep vee Ratched Handler "
                            android:textColor="#a3a3a3"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <RatingBar
                            android:id="@+id/rbView_product_rating"
                            android:layout_width="105dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="10dp"
                            android:isIndicator="true"
                            android:max="5"
                            android:numStars="5"
                            android:rating="4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(5)"
                            android:textColor="#a3a3a3"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvView_product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="$88.00"
                        android:textColor="#54c891"
                        android:textSize="18sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivView_product_thumbnail"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/white_rectangle_black_border"
                    android:padding="5dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/vertical_divider_welcome" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/vertical_divider_welcome" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal" >

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/vertical_divider_welcome" />

        <LinearLayout
            android:id="@+id/llViewProduct_options_col1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/tvViewProduct_option_value1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Black"
                android:textColor="#717171"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvViewProduct_option_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color"
                android:textColor="#a3a3a3"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/drop_down_indicator" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/vertical_divider_welcome" />

        <LinearLayout
            android:id="@+id/llViewProduct_options_col2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/tvViewProduct_option_value2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Men&apos;s 9"
                android:textColor="#717171"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvViewProduct_option_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size"
                android:textColor="#a3a3a3"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/drop_down_indicator" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/vertical_divider_welcome" />

        <LinearLayout
            android:id="@+id/llViewProduct_options_col3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/tvViewProduct_option_value3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textColor="#717171"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvViewProduct_option_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="option"
                android:textColor="#a3a3a3"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/drop_down_indicator" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/vertical_divider_welcome" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/vertical_divider_welcome" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp" >

        <ProgressBar
            android:id="@+id/pbView_product_comments_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"
            android:layout_marginBottom="40dp"
            />


        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginBottom="130dp"
            android:layout_marginLeft="90dp" />

        <ListView
            android:id="@+id/lvlvView_product_thumbnails"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:divider="#ffffff"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scrollbars="none" />


        <com.gilo.soko.views.HorizontalListView
            android:id="@+id/lvView_product_color_options"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="55dp"
            android:paddingRight="30dp"
            android:layout_marginLeft="60dp" />

        <ListView
            android:id="@+id/lvView_product_comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:background="#ffffff"
            android:divider="#ffffff"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="gone" />



        <ScrollView
            android:id="@+id/svView_product_scroll_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:visibility="gone"
            android:layout_marginBottom="60dp" >

            <TextView
                android:id="@+id/tvView_product_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="10dp"
                android:text="Something goes here"
                android:textColor="#a3a3a3"
                android:textSize="14sp" />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bView_product_similar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#6a89ae"
                android:text="Similar Items"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bView_product_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#55c892"
                android:text="Add to Cart"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/vertical_divider_welcome" />

</LinearLayout>